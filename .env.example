# Server
PORT=3000
NODE_ENV=development

# API Authentication
API_KEY=your-secret-api-key-here

# Evergreen Credentials
EVERGREEN_EMAIL=your-email@example.com
EVERGREEN_PASSWORD=your-password

# Scheduling
CRON_SCHEDULE="*/15 * * * *"
FETCH_DAYS_AHEAD=7

# Caching
CACHE_TTL_MINUTES=20
STALE_SERVE_MINUTES=60

# Timezone
TZ=Pacific/Auckland

# Email Alerts (SMTP) - Optional
SMTP_HOST=smtp.eu.mailgun.org
SMTP_PORT=465
SMTP_USER=notification@mail.yourdomain.com
SMTP_PASS=your-smtp-password
EMAIL_TO=admin@example.com
ALERT_COOLDOWN_MINUTES=30
